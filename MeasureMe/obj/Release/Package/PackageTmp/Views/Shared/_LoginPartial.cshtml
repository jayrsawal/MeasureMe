@if (Request.IsAuthenticated) {
    <ul class="nav navbar-nav">
        <li><a href="http://www.oducado.com">About</a></li>
        <li>@Html.ActionLink("Home", "Home", "Main")</li>
    </ul>
    using (Html.BeginForm("Logout", "Auth", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" })) {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
} else {
    <ul class="nav navbar-nav">
        <li><a href="http://www.oducado.com">About</a></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
        <li class="login">
            <form class="form-inline" action="@Url.Action("Login", "Auth")" method="post">
                <div class="form-group">
                    <label for="Username">username</label><input name="Username" class="input-validation-error text-box single-line" id="Username" type="text" value="" data-val-required="The Username field is required." data-val="true" placeholder="Username"/>
                </div>
                <div class="form-group">
                    <label for="Password">password</label><input name="Password" class="input-validation-error text-box single-line password" id="Password" type="password" value="" data-val-required="The Password field is required." data-val="true" placeholder="Password"/>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-default accept" value="Sign in"/>
                </div>
            </form>
        </li>
    </ul>
}
